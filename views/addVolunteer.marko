<!DOCTYPE html>


<html xmlns:th="http://www.thymeleaf.org" lang="en">
    <head>
        <title>Add Volunteers</title>
        <script src="/js/jquery.js"></script>
        <script src="/js/js/bootstrap.js"></script>
        <link rel="stylesheet" src="/js/css/bootstrap.css">
        <script>
            $(document).ready(function(){
                var email,pass
              $ ("#logOut").click(function(){
                    email="";
                    pass="";
                  
                    $.post("/login",{email:email,pass:pass},function(data){
                        if(data==='done') {
                            window.location.href="/logout"
                        }
                    })
                })

                $("#cancel").click(function() {
                    window.location.href="/manageVolunteers"
                })

            });

            function validateForm(event) {
                var inputEmail = document.forms["addVolunteer"]["email"].value
                var emailPat = new RegExp("[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?")
                if (inputEmail && (!inputEmail.match(emailPat))) {
                    alert("Incorrect Email Format")

                    return false;
                }
                var inputPhoneNumber = document.forms["addVolunteer"]["phoneNumber"].value
                var inputemergencyPhoneNumber = document.forms["addVolunteer"]["emergencyPhoneNumber"].value
                var phonePat = new RegExp("^[\+]?[(]?[0-9]{3}[)]?[-\s\.]?[0-9]{3}[-\s\.]?[0-9]{4,6}$")
                if (inputPhoneNumber && (!inputPhoneNumber.match(phonePat))) {
                    alert("Incorrect Phone number Format")                    
                    return false;
                }
                if (inputemergencyPhoneNumber && (!inputemergencyPhoneNumber.match(phonePat))) {
                    alert("Incorrect Emergency Phone number Format")                    
                    return false;
                }
                var inputAddress = document.forms["addVolunteer"]["address"].value
                var inputEmergencyAddress = document.forms["addVolunteer"]["emergencyAddress"].value
                var addressPat = new RegExp("^[0-9]+\\s[A-Z||a-z||\\s||.]*\\s[0-9][0-9][0-9][0-9][0-9]\\s[A-Z||a-z]+$")
                if (inputAddress && (!inputAddress.match(addressPat))){
                    alert("Incorrect Address, use format: house# street zip state")
                    return false;
                }
                if (inputEmergencyAddress && (!inputEmergencyAddress.match(addressPat))){
                    alert("Incorrect Emergency Address, use format: house# street zip state")
                    return false;
                }
            }
            </script>
    </head>
    <body>
        <h1>${input.greeting}</h1>
        <h1>Add Volunteer</h1>

        <!-- <form action="/addVolunteer" method="post" name = "addVolunteer" onsubmit="return validateForm()"> -->
        <form action="/addVolunteer" method="post" name = "addVolunteer">
            <label for="first">First name: </label>
            <input type="text" id="first" name="firstname"><br><br>
            
            <label for="last">Last name: </label>
            <input type="text" id="last" name="lastname"><br><br>
            
            <label for="userName">User name: </label>
            <input type="text" id="userName" name="username"><br><br>

            <label for="password">Password: </label>
            <input type="password" id="password" name="password"><br><br>

            <label for="">Perfered Volunteer centers: </label>
            <textarea rows="3" cols="40" name="centers" id=""></textarea><br><br>

            <label for="">Skills/Interests: </label>
            <textarea rows="3" cols="40" name="skills" id=""></textarea><br><br>

            <label for="">Availability Times: </label>
            <input type="text" id="" name="availability"><br><br>

            <label for="">Address: </label>
            <input type="text" id="address" name="address" placeholder="house# street zip state"><br><br>

            <label for="">Phone #: </label>
            <input type="text" id="phoneNumber" name="phone" placeholder="##########"><br><br>

            <label for="email">Email: </label>
            <input type="text" id="email" name="email" placeholder="example@exaple.com"><br><br>

            <label for="educationalBackground">Edcuational Background: </label>
            <textarea rows="3" cols="40" name="education" id="educationalBackground"></textarea><br><br>

            <label for="">Current Licenses: </label>
            <input type="text" id="" name="licenses"><br><br>

            <label for="">Emergency Contact Name: </label>
            <input type="text" id="" name="emergencyname"><br><br>

            <label for="">Emergency Contact Phone #: </label>
            <input type="text" id="emergencyPhoneNumber" name="emergencyphone" placeholder="##########"><br><br>

            <div class="form-group">
                <div class="row">
                    <label for="">Emergency Contact Email: </label>
                    <input type="text" id="emergencyEmail" name="emergencyemail" placeholder="example@exaple.com"><br><br>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label for="">Emergency Contact Address: </label>
                    <input type="text" id="emergencyAddress" name="emergencyaddress" placeholder="house# street zip state"><br><br>
                </div>
            </div> 
            <div class="form-group">
                <div class="row">
                    <label>Copy of Drivers License on File: </label>
                    <select class="form-control" name="dlfile">
                        <option value="true">True</option>
                        <option value="false">False</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label>Copy of SSN on file: </label>
                    <select class="form-control" name="ssfile">
                        <option value="true">True</option>
                        <option value="false">False</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <label>Volunteers Approval Status: </label>
                    <select class="form-control" name="approval">
                        <option value="true">Approved</option>
                        <option value="false">Denied</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <input type="submit" id="submit" value="Submit">
                </div>
            </div>
        </form>

        <input type="button" value="Cancel" id="cancel">
        <input type="button" value="log out" id="logOut" onclick("logOut")>

    </body>
</html>